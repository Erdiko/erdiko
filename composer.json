{
    "name": "erdiko/erdiko",
    "description": "A micro MVC framework built with Slim and Symfony components",
    "keywords": ["microframework", "rest", "router", "psr7", "php7"],
    "homepage": "http://erdiko.org",
    "license": "MIT",
    "authors": [
        {
            "name": "John Arroyo",
            "email": "erdiko@arroyolabs.com",
            "homepage": "http://www.arroyolabs.com/"
        }
    ],
    "require": {
        "php": ">=7.0",
        "erdiko/core": "@dev",
        "slim/slim": "^3.8",
        "erdiko/theme": "@dev",
        "erdiko/session": "@dev",
        "erdiko/email": "@dev",
        "erdiko/doctrine": "@dev",
        "monolog/monolog": "^1.22",
        "guzzlehttp/guzzle": "~6.0",
        "mailgun/mailgun-php": "^2.3",
        "php-http/curl-client": "^1.7",
        "guzzlehttp/psr7": "^1.4"
    },
    "autoload" : {
        "psr-4" : {
            "app\\" : "app/",
            "controllers\\" : "app/controllers/",
            "services\\" : "app/services/",
            "models\\" : "app/models/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	  "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit",
        "erdiko": "docker-compose up -d"
	  },
    "repositories": [
        {
            "type": "path",
            "url": "../theme",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../core",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../session",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../doctrine",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../email",
            "options": {
                "symlink": true
            }
        }
    ]
}
