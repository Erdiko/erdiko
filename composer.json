{
    "name": "erdiko/erdiko",
    "description": "A micro MVC framework built with Slim",
    "keywords": ["microframework", "rest", "router", "psr7", "php7"],
    "homepage": "http://erdiko.org",
    "license": "MIT",
    "authors": [
        {
            "name": "John Arroyo",
            "email": "erdiko@arroyolabs.com",
            "homepage": "http://www.arroyolabs.com/"
        }
    ],
    "require": {
        "php": ">=7.0",
        "erdiko/core": "@dev",
        "erdiko/theme": "@dev",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "slim/flash": "^0.2.0",
        "slim/twig-view": "^2.2",
        "monolog/monolog": "^1.17",
        "kanellov/slim-twig-flash": "^0.2.0"
    },
    "autoload" : {
        "psr-4" : {
            "app\\" : "app/",
            "controllers\\" : "app/controllers/",
            "services\\" : "app/services/",
            "models\\" : "app/models/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit",
        "erdiko": "docker-compose up -d"
	},
    "repositories": [
        {
            "type": "path",
            "url": "../theme",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../core",
            "options": {
                "symlink": true
            }
        }
    ]
}
